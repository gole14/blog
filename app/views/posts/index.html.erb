<h1>todas las publicaciones<h1>

<%= link_to "Crear nueva publicacion", new_post_path %>

<table border=1>
	<thead>
		<tr>
			<th>titulo</th>
			<th>cuerpo</th>
			<th>autor</th>
			<th>fecha de creacion</th>
			<th>última modificación</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |post| %>
		<!-- con = te imprime lo de ruby-->
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= post.author %></td>
			<td><%= post.created_at %></td>
			<td><%= post.updated_at %></td>
			<td><%= link_to "Editar", edit_post_path(post) %></td>
      <td><%= link_to "Eliminar", post_path(post), data: {method: "DELETE"} %></td>
		</tr>
		<% end %>
	</tbody>
</table>
